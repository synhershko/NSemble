@using NSemble.Core.Extensions
@using NSemble.Core.Models
@using NSemble.Modules.ContentPages.Models
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{
    Layout = "_Layout.cshtml";
    var cp = Model.ContentPage as ContentPage;
}

@if (cp != null)
{
    if (cp.ContentType != DynamicContentType.Html)
    {
        <div class="container">
            <main>
                <article>
                    <h1>@Model.ContentPage.Title</h1>
                    @DynamicContentHelpers.CompiledContent(cp, true)
                </article>
            </main>
        </div>
    }
    else
    {
        @DynamicContentHelpers.CompiledContent(cp, true)
    }
}
